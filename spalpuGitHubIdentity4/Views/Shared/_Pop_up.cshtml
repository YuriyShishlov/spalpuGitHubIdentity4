@model IdentitySample.Models.RegisterLoginViewModel

@*Модальное окно Вход в личный кабинет*@

<div class="modal" id="myModalLogin" tabindex="-1" role="dialog" aria-labelledby="myModal-label">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModal-label">Личный кабинет</h4>
            </div>
            <div class="modal-body modal_body_padding_bottom">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.LogModel.Email)
                        @Html.TextBoxFor(m => m.LogModel.Email, new { @class = "form-control", placeholder = "Введите email", type = "email" })
                        @Html.ValidationMessageFor(m => m.LogModel.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LogModel.Password)
                        @Html.PasswordFor(m => m.LogModel.Password, new { @class = "form-control", placeholder = "Введите пароль", type = "password" })
                        @Html.ValidationMessageFor(m => m.LogModel.Password, "", new { @class = "text-danger" })
                    </div>
                    @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" value="Вход" class="btn btn-default" />
                            </div>
                        </div>*@
                    <div class="margin_register_forgot">
                        <div class="form-group">
                            @*@Html.ActionLink("Регистрация", "RegisterModal", "Account", routeValues: null, htmlAttributes: new { @class = "pull-left", data_toggle = "modal", data_target = "#myModalRegister" })*@
                            <a href="#" id="linkRegister" class="pull-left" data-toggle="modal" data-target="#myModalRegister">Регистрация</a>
                        </div>
                        <div class="form-group">
                            @*@Html.ActionLink("Забыли пароль?", "ForgotPassword", null, new { @class = "pull-right" })*@
                            <a href="#" class="pull-right" id="linkForgot" data-toggle="modal" data-target="#myModalForgot">Забыли пароль?</a>
                        </div>
                    </div>
                    }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <input type="submit" value="Вход" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

@*Модальное окно Регистрация*@

<div class="modal" id="myModalRegister" tabindex="-1" role="dialog" aria-labelledby="myModal-label">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModal-label">Регистрация</h4>
            </div>
            <div class="modal-body modal_body_padding_bottom">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.RegModel.NameDisplay)
                        @Html.TextBoxFor(m => m.RegModel.NameDisplay, new { @class = "form-control", placeholder = "Введите Ник" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RegModel.Email)
                        @Html.PasswordFor(m => m.RegModel.Email, new { @class = "form-control", placeholder = "Введите email", type = "email" })
                        @Html.ValidationMessageFor(m => m.RegModel.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RegModel.Password)
                        @Html.PasswordFor(m => m.RegModel.Password, new { @class = "form-control", placeholder = "Введите пароль", type = "password" })
                        @Html.ValidationMessageFor(m => m.RegModel.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RegModel.ConfirmPassword)
                        @Html.PasswordFor(m => m.RegModel.ConfirmPassword, new { @class = "form-control", placeholder = "Подтвердите пароль", type = "password" })
                        @Html.ValidationMessageFor(m => m.RegModel.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <input type="submit" value="Регистрация" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

@*Модальное окно Забыли пароль?*@

