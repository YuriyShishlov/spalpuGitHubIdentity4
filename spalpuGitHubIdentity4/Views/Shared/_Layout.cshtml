<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">@*Для максимальной совместимости bootstrap с IE*@
    <title>@ViewBag.Title</title>
    @RenderSection("meta", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/img/spa.png" /></a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Книга<span class="caret"></span></a>
                            <ul class="dropdown-menu menu_heigh">
                                <li class="dropdown-submenu">
                                    <a tabindex="-1" href="#">Жизнь - это Движение</a>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-submenu">
                                            @Html.ActionLink("Жизнь - это Движение", "LifeGo", "Lifego")
                                            <ul class="dropdown-menu">
                                                <li>@Html.ActionLink("Здоровье", "SmailPhilosophy", "Lifego")</li>
                                                <li>@Html.ActionLink("Остеохондроз", "Osteochondrosis", "Lifego")</li>
                                                <li>@Html.ActionLink("Наши Мышцы", "Mysshtsy", "Lifego")</li>
                                                <li>@Html.ActionLink("Что такое Мышца?", "Whomysshtsy", "Lifego")</li>
                                                <li>@Html.ActionLink("Расслабление", "Relaxation", "Lifego")</li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-submenu">
                                            @Html.ActionLink("Азбука СФА", "Gold_rules", "Lifego")
                                            <ul class="dropdown-menu">
                                                <li>@Html.ActionLink("Зарядка для Хвоста", "Charging_for_tail", "Lifego")</li>
                                                <li>@Html.ActionLink("Самостоятельно", "Singly", "Lifego")</li>
                                                <li>@Html.ActionLink("Брусья", "Bars", "Lifego")</li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-submenu">
                                            @Html.ActionLink("Дыхание", "Breathing_exercises", "Lifego")
                                            <ul class="dropdown-menu">
                                                <li>@Html.ActionLink("Упражнения", "Breathing_exercises_relax", "Lifego")</li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-submenu">
                                            @Html.ActionLink("Массаж", "Massage", "Lifego")
                                            <ul class="dropdown-menu">
                                                <li>@Html.ActionLink("Массаж и боль", "Massage_and_pain", "Lifego")</li>
                                                <li>@Html.ActionLink("Дуэт", "Massage_is_available_to_everyone", "Lifego")</li>
                                                <li>@Html.ActionLink("Классический массаж", "Classic_massage", "Lifego")</li>
                                                <li>@Html.ActionLink("Тайский массаж", "Thai_massage", "Lifego")</li>
                                                <li>@Html.ActionLink("Массаж ног", "Foot_massage", "Lifego")</li>
                                                <li>@Html.ActionLink("Массаж таза", "Pelvic_massage", "Lifego")</li>
                                                <li>@Html.ActionLink("Массаж живота", "Abdominal_massage", "Lifego")</li>
                                                <li>@Html.ActionLink("Массаж шеи", "Neck_massage", "Lifego")</li>
                                                <li>@Html.ActionLink("Заключение", "Conclusion", "Lifego")</li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-submenu">
                                            @Html.ActionLink("Приложение", "Attachment", "Lifego")
                                            <ul class="dropdown-menu">
                                                <li>@Html.ActionLink("Острый период 1", "Acute_period1", "Lifego")</li>
                                                <li>@Html.ActionLink("Острый период 2", "Acute_period2", "Lifego")</li>
                                                <li>@Html.ActionLink("Острый период 3", "Acute_period3", "Lifego")</li>
                                                <li>@Html.ActionLink("Специальные", "Special", "Lifego")</li>
                                                <li>@Html.ActionLink("Методика", "Metodika", "Lifego")</li>
                                                <li>@Html.ActionLink("Памятка", "All", "Lifego")</li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>

                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                            <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")

                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </header>
    <div class="fon_slider">
        <div class="container">
            <div id="my-carousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#my-carousel" data-slide-to="0" class="active slade"></li>
                    <li data-target="#my-carousel" data-slide-to="1" class="slade"></li>
                    <li data-target="#my-carousel" data-slide-to="2" class="slade"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img alt="Слайд 1" src="~/Content/img/header3.png" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img alt="Слайд 2" src="~/Content/img/header1.png" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img alt="Слайд 3" src="~/Content/img/header2.png" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                </div>

                @*<a class="left carousel-control" href="#my-carousel" data-slide="prev">
                *@
                @*Стрелка на слайдере влево*@
                @*<i class="fa fa-angle-left fa-2x" aria-hidden="true"></i>*@
                @*
                    </a>
                    <a class="right carousel-control" href="#my-carousel" data-slide="next">
                *@
                @*Стрелка на слайдере вправо*@
                @*<i class="fa fa-angle-right fa-2x" aria-hidden="true"></i>*@
                @*
                    </a>*@
            </div>
        </div>
    </div>
    <div id="wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 hidden-md hidden-sm hidden-xs">
                    <div class="panel panel-default" id="left">
                        @Html.Partial("~/Views/Shared/_TreePartial.cshtml")
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="panel panel-default" id="right">
                        <div id="loadcontent">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="navbar navbar-inverse">
        <div class="container">
            <p>&copy; @DateTime.Now.Year</p>
        </div>
    </footer>

    @Html.Partial("~/Views/Shared/_Pop_up.cshtml")

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
